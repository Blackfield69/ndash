<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <script src="https://unpkg.com/lucide@latest"></script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
    }

    .main-container {
      display: flex;
      width: 100%;
      height: 100vh;
    }

    .content {
      flex: 1;
      overflow-y: auto;
      background: #f7fafc;
    }

    .content-wrapper {
      max-width: 1400px;
      margin: 0 auto;
      padding: 40px 20px;
    }

    header {
      background: white;
      padding: 20px 30px;
      margin-bottom: 30px;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
      display: flex;
      align-items: center;
      gap: 15px;
    }

    header h1 {
      font-size: 28px;
      font-weight: 700;
      color: #1a202c;
    }

    header svg {
      width: 32px;
      height: 32px;
      color: #667eea;
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }

    .stat-card {
      background: white;
      padding: 24px;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
      transition: all 0.3s;
      border-left: 4px solid #667eea;
    }

    .stat-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.12);
    }

    .stat-label {
      font-size: 13px;
      font-weight: 600;
      color: #718096;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 8px;
    }

    .stat-value {
      font-size: 32px;
      font-weight: 700;
      color: #1a202c;
      margin-bottom: 4px;
    }

    .stat-unit {
      font-size: 13px;
      color: #a0aec0;
    }

    .section {
      background: white;
      padding: 24px;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
      margin-bottom: 20px;
    }

    .section-title {
      font-size: 18px;
      font-weight: 700;
      color: #1a202c;
      margin-bottom: 20px;
      padding-bottom: 12px;
      border-bottom: 2px solid #e2e8f0;
    }

    .stats-table {
      width: 100%;
      border-collapse: collapse;
    }

    .stats-table thead {
      background: #f7fafc;
    }

    .stats-table th {
      padding: 12px;
      text-align: left;
      font-size: 12px;
      font-weight: 700;
      color: #4b5563;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      border-bottom: 1px solid #e2e8f0;
    }

    .stats-table td {
      padding: 14px 12px;
      border-bottom: 1px solid #e2e8f0;
      font-size: 14px;
      color: #2d3748;
    }

    .stats-table tr:hover {
      background: #f9fafb;
    }

    .stats-table tbody tr:last-child td {
      border-bottom: none;
    }

    .stat-name {
      font-weight: 500;
      color: #2d3748;
      font-family: monospace;
    }

    .stat-numeric {
      text-align: right;
      font-family: monospace;
      color: #667eea;
      font-weight: 600;
    }

    .filter-group {
      display: flex;
      gap: 12px;
      margin-bottom: 20px;
    }

    input[type="search"] {
      flex: 1;
      padding: 10px 12px;
      border: 1px solid #e2e8f0;
      border-radius: 6px;
      font-size: 14px;
      transition: border-color 0.2s;
    }

    input[type="search"]:focus {
      outline: none;
      border-color: #667eea;
    }

    .btn {
      padding: 10px 16px;
      border: none;
      border-radius: 6px;
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
      display: inline-flex;
      align-items: center;
      gap: 8px;
    }

    .btn-primary {
      background: #667eea;
      color: white;
    }

    .btn-primary:hover {
      background: #5a67d8;
    }

    .btn-secondary {
      background: #e2e8f0;
      color: #2d3748;
    }

    .btn-secondary:hover {
      background: #cbd5e0;
    }

    .loading {
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 400px;
      font-size: 16px;
      color: #718096;
    }

    .loading::after {
      content: '';
      width: 40px;
      height: 40px;
      border: 3px solid #e2e8f0;
      border-top-color: #667eea;
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    .error-banner {
      background: #fed7d7;
      border: 1px solid #fc8181;
      color: #c53030;
      padding: 16px;
      border-radius: 8px;
      margin-bottom: 20px;
      display: none;
    }

    .error-banner.show {
      display: block;
    }

    .tabs {
      display: flex;
      gap: 12px;
      margin-bottom: 20px;
      border-bottom: 2px solid #e2e8f0;
    }

    .tab {
      padding: 12px 16px;
      background: none;
      border: none;
      font-size: 14px;
      font-weight: 600;
      color: #a0aec0;
      cursor: pointer;
      border-bottom: 3px solid transparent;
      transition: all 0.2s;
      margin-bottom: -2px;
    }

    .tab:hover {
      color: #4b5563;
    }

    .tab.active {
      color: #667eea;
      border-bottom-color: #667eea;
    }

    .tab-content {
      display: none;
    }

    .tab-content.active {
      display: block;
    }

    .refresh-btn {
      display: flex;
      align-items: center;
      gap: 8px;
      margin-left: auto;
    }

    .metric-group {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 16px;
      margin-bottom: 24px;
    }

    .mini-stat {
      background: #f7fafc;
      padding: 16px;
      border-radius: 8px;
      text-align: center;
    }

    .mini-stat-label {
      font-size: 12px;
      color: #718096;
      font-weight: 600;
      margin-bottom: 8px;
    }

    .mini-stat-value {
      font-size: 24px;
      font-weight: 700;
      color: #667eea;
    }

    [data-lucide] {
      display: inline-block;
    }
  </style>
</head>
<body>
  <div class="main-container">
    <!-- Sidebar -->
    <aside class="sidebar">
      <%- include('partials/sidebar') %>
    </aside>

    <!-- Content -->
    <main class="content">
      <div class="content-wrapper">
        <!-- Header -->
        <header>
          <svg data-lucide="bar-chart-2"></svg>
          <h1>Statistics</h1>
          <button class="btn btn-primary refresh-btn" onclick="refreshStatistics()">
            <svg data-lucide="refresh-cw" style="width: 16px; height: 16px;"></svg>
            Refresh
          </button>
        </header>

        <!-- Error Banner -->
        <div id="error-banner" class="error-banner">
          <span id="error-message"></span>
        </div>

        <!-- Main Statistics -->
        <div id="main-stats-loading" class="loading" style="display: none;"></div>
        
        <div id="main-stats" style="display: none;">
          <div class="stats-grid" id="main-stats-grid"></div>
        </div>

        <!-- Detailed Statistics Section -->
        <div id="detailed-stats-loading" class="loading" style="display: none;"></div>

        <div id="detailed-stats" style="display: none;">
          <div class="section">
            <div class="filter-group">
              <input type="search" id="statsFilter" placeholder="Search statistics..." onkeyup="filterStats()">
            </div>

            <div class="tabs">
              <button class="tab active" onclick="switchTab('all')">All Statistics</button>
              <button class="tab" onclick="switchTab('queries')">Queries</button>
              <button class="tab" onclick="switchTab('cache')">Cache</button>
              <button class="tab" onclick="switchTab('performance')">Performance</button>
            </div>

            <!-- All Statistics Tab -->
            <div id="tab-all" class="tab-content active">
              <table class="stats-table" id="all-stats-table">
                <thead>
                  <tr>
                    <th style="width: 40%;">Statistic Name</th>
                    <th style="width: 60%; text-align: right;">Value</th>
                  </tr>
                </thead>
                <tbody id="all-stats-tbody"></tbody>
              </table>
            </div>

            <!-- Queries Tab -->
            <div id="tab-queries" class="tab-content">
              <div class="metric-group" id="queries-metrics"></div>
              <table class="stats-table" id="queries-stats-table">
                <thead>
                  <tr>
                    <th style="width: 40%;">Statistic Name</th>
                    <th style="width: 60%; text-align: right;">Value</th>
                  </tr>
                </thead>
                <tbody id="queries-stats-tbody"></tbody>
              </table>
            </div>

            <!-- Cache Tab -->
            <div id="tab-cache" class="tab-content">
              <div class="metric-group" id="cache-metrics"></div>
              <table class="stats-table" id="cache-stats-table">
                <thead>
                  <tr>
                    <th style="width: 40%;">Statistic Name</th>
                    <th style="width: 60%; text-align: right;">Value</th>
                  </tr>
                </thead>
                <tbody id="cache-stats-tbody"></tbody>
              </table>
            </div>

            <!-- Performance Tab -->
            <div id="tab-performance" class="tab-content">
              <div class="metric-group" id="performance-metrics"></div>
              <table class="stats-table" id="performance-stats-table">
                <thead>
                  <tr>
                    <th style="width: 40%;">Statistic Name</th>
                    <th style="width: 60%; text-align: right;">Value</th>
                  </tr>
                </thead>
                <tbody id="performance-stats-tbody"></tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>

  <script>
    const appState = {
      stats: [],
      filteredStats: [],
      currentTab: 'all'
    };

    // Initialize
    document.addEventListener('DOMContentLoaded', () => {
      loadStatistics();
      // Refresh every 30 seconds
      setInterval(loadStatistics, 30000);
    });

    async function loadStatistics() {
      try {
        document.getElementById('main-stats-loading').style.display = 'flex';
        document.getElementById('main-stats').style.display = 'none';
        document.getElementById('detailed-stats-loading').style.display = 'flex';
        document.getElementById('detailed-stats').style.display = 'none';

        const response = await fetch('/api/servers/localhost/statistics');
        if (!response.ok) {
          throw new Error(`API error: ${response.status}`);
        }

        appState.stats = await response.json();
        renderStatistics();

      } catch (error) {
        console.error('Error loading statistics:', error);
        showError(error.message);
      } finally {
        document.getElementById('main-stats-loading').style.display = 'none';
        document.getElementById('detailed-stats-loading').style.display = 'none';
      }
    }

    function renderStatistics() {
      // Show main stats
      document.getElementById('main-stats').style.display = 'block';
      document.getElementById('detailed-stats').style.display = 'block';

      // Get key statistics for main grid
      const keyStats = [
        'backend-queries',
        'corrupt-packets',
        'query-cache-hit',
        'packet-cache-hit',
        'qsize-q',
        'recursion-unanswered'
      ];

      const mainStatsGrid = document.getElementById('main-stats-grid');
      mainStatsGrid.innerHTML = '';

      keyStats.forEach(statName => {
        const stat = appState.stats.find(s => s.name === statName);
        if (stat) {
          const card = createStatCard(stat);
          mainStatsGrid.appendChild(card);
        }
      });

      // Render detailed tables
      renderAllStats();
      renderQueryStats();
      renderCacheStats();
      renderPerformanceStats();
    }

    function createStatCard(stat) {
      const card = document.createElement('div');
      card.className = 'stat-card';
      
      const value = parseInt(stat.value) || 0;
      const formattedValue = value.toLocaleString();
      
      const label = stat.name.replace(/-/g, ' ').toUpperCase();

      card.innerHTML = `
        <div class="stat-label">${label}</div>
        <div class="stat-value">${formattedValue}</div>
        <div class="stat-unit">current value</div>
      `;

      return card;
    }

    function renderAllStats() {
      const tbody = document.getElementById('all-stats-tbody');
      tbody.innerHTML = '';

      appState.stats.forEach(stat => {
        const row = document.createElement('tr');
        const value = parseInt(stat.value) || 0;
        const formattedValue = value.toLocaleString();

        row.innerHTML = `
          <td><span class="stat-name">${stat.name}</span></td>
          <td><span class="stat-numeric">${formattedValue}</span></td>
        `;
        tbody.appendChild(row);
      });
    }

    function renderQueryStats() {
      const metrics = document.getElementById('queries-metrics');
      const tbody = document.getElementById('queries-stats-tbody');
      metrics.innerHTML = '';
      tbody.innerHTML = '';

      const queryStats = appState.stats.filter(s => 
        s.name.includes('query') || 
        s.name.includes('queries') ||
        s.name.includes('questions') ||
        s.name.includes('answers')
      );

      // Show top metrics
      queryStats.slice(0, 3).forEach(stat => {
        const value = parseInt(stat.value) || 0;
        const metric = document.createElement('div');
        metric.className = 'mini-stat';
        metric.innerHTML = `
          <div class="mini-stat-label">${stat.name.replace(/-/g, ' ')}</div>
          <div class="mini-stat-value">${value.toLocaleString()}</div>
        `;
        metrics.appendChild(metric);
      });

      // Show all query stats in table
      queryStats.forEach(stat => {
        const row = document.createElement('tr');
        const value = parseInt(stat.value) || 0;
        const formattedValue = value.toLocaleString();

        row.innerHTML = `
          <td><span class="stat-name">${stat.name}</span></td>
          <td><span class="stat-numeric">${formattedValue}</span></td>
        `;
        tbody.appendChild(row);
      });
    }

    function renderCacheStats() {
      const metrics = document.getElementById('cache-metrics');
      const tbody = document.getElementById('cache-stats-tbody');
      metrics.innerHTML = '';
      tbody.innerHTML = '';

      const cacheStats = appState.stats.filter(s =>
        s.name.includes('cache') ||
        s.name.includes('packetcache')
      );

      // Show top metrics
      cacheStats.slice(0, 3).forEach(stat => {
        const value = parseInt(stat.value) || 0;
        const metric = document.createElement('div');
        metric.className = 'mini-stat';
        metric.innerHTML = `
          <div class="mini-stat-label">${stat.name.replace(/-/g, ' ')}</div>
          <div class="mini-stat-value">${value.toLocaleString()}</div>
        `;
        metrics.appendChild(metric);
      });

      // Show all cache stats in table
      cacheStats.forEach(stat => {
        const row = document.createElement('tr');
        const value = parseInt(stat.value) || 0;
        const formattedValue = value.toLocaleString();

        row.innerHTML = `
          <td><span class="stat-name">${stat.name}</span></td>
          <td><span class="stat-numeric">${formattedValue}</span></td>
        `;
        tbody.appendChild(row);
      });
    }

    function renderPerformanceStats() {
      const metrics = document.getElementById('performance-metrics');
      const tbody = document.getElementById('performance-stats-tbody');
      metrics.innerHTML = '';
      tbody.innerHTML = '';

      const perfStats = appState.stats.filter(s =>
        s.name.includes('latency') ||
        s.name.includes('cpu') ||
        s.name.includes('time') ||
        s.name.includes('uptime')
      );

      // Show top metrics
      perfStats.slice(0, 3).forEach(stat => {
        const value = parseInt(stat.value) || 0;
        const metric = document.createElement('div');
        metric.className = 'mini-stat';
        metric.innerHTML = `
          <div class="mini-stat-label">${stat.name.replace(/-/g, ' ')}</div>
          <div class="mini-stat-value">${value.toLocaleString()}</div>
        `;
        metrics.appendChild(metric);
      });

      // Show all performance stats in table
      perfStats.forEach(stat => {
        const row = document.createElement('tr');
        const value = parseInt(stat.value) || 0;
        const formattedValue = value.toLocaleString();

        row.innerHTML = `
          <td><span class="stat-name">${stat.name}</span></td>
          <td><span class="stat-numeric">${formattedValue}</span></td>
        `;
        tbody.appendChild(row);
      });
    }

    function switchTab(tabName) {
      appState.currentTab = tabName;

      // Update tab buttons
      document.querySelectorAll('.tab').forEach(tab => {
        tab.classList.remove('active');
      });
      event.target.classList.add('active');

      // Update tab content
      document.querySelectorAll('.tab-content').forEach(content => {
        content.classList.remove('active');
      });
      document.getElementById(`tab-${tabName}`).classList.add('active');
    }

    function filterStats() {
      const searchTerm = document.getElementById('statsFilter').value.toLowerCase();
      
      if (!searchTerm) {
        renderAllStats();
        return;
      }

      const filtered = appState.stats.filter(s =>
        s.name.toLowerCase().includes(searchTerm) ||
        s.value.toLowerCase().includes(searchTerm)
      );

      const tbody = document.getElementById('all-stats-tbody');
      tbody.innerHTML = '';

      filtered.forEach(stat => {
        const row = document.createElement('tr');
        const value = parseInt(stat.value) || 0;
        const formattedValue = value.toLocaleString();

        row.innerHTML = `
          <td><span class="stat-name">${stat.name}</span></td>
          <td><span class="stat-numeric">${formattedValue}</span></td>
        `;
        tbody.appendChild(row);
      });
    }

    function refreshStatistics() {
      loadStatistics();
    }

    function showError(message) {
      const banner = document.getElementById('error-banner');
      const messageEl = document.getElementById('error-message');
      messageEl.textContent = message;
      banner.classList.add('show');
      setTimeout(() => banner.classList.remove('show'), 5000);
    }
  </script>

  <script>
    // Render icons when page loads (lucide script is already loaded in head)
    window.addEventListener('load', () => {
      try {
        if (typeof lucide !== 'undefined') {
          lucide.createIcons();
        }
      } catch (e) {
        console.error('Error creating lucide icons:', e);
      }
    });
  </script>

</body>
</html>
